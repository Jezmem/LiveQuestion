{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div style="margin:3%;">
		<div class="d-flex align-items-center">
			<img src="image/{{ derniere_question.image }}" class="img-responsive">
			<div class="last-question-element ms-5">
				<div class="d-flex align-items-center fs-4">
					<p class="mb-0 fw-bold">{{ derniere_question.Category.name }}</p>
					<p class="mb-0 fw-bold px-2">.</p>
					<p class="mb-0">
						{% set minutes = (now|date('U') - derniere_question.publicationDate|date('U')) // 60 %}
						{{ minutes }}
						minutes
					</p>
				</div>
				<p class="fs-2 fw-medium my-2">{{ derniere_question.title }}</p>
				<p class="fs-4 text-custom">{{ derniere_question.Answer|length }}
					réponses - par
					{{ derniere_question.user.username }}</p>
			</div>
		</div>


		<h1 class="section-title">Dernières questions</h1>

		<div class="d-flex justify-content-between my-3">
			{% for question in dernieres_questions %}
				<div
					class="questions position-relative">
					<!-- Catégorie affichée en haut à droite de l'image -->
					<div class="category-label">{{ question.category.name }}</div>
					<img class="questions-image" src="image/{{ question.image }}">
					<p class="questions-text">{{ question.title }}</p>
					<p class="text-custom">
						{{ question.Answer|length }}
						réponses - Par
						{{ question.user.username }}
						-
						{% set minutes = (now|date('U') - question.publicationDate|date('U')) // 60 %}
						Il y a
						{{ minutes }}
						minutes
					</p>
				</div>
			{% endfor %}
		</div>


		<h1 class="section-title">Meilleurs auteurs</h1>

		<div class="d-flex justify-content-between my-3">
			{% for auteur in meilleurs_auteurs %}
				<div class="authors-ranking">
					<p class="authors-ranking-number">{{ loop.index }}</p>
					<div>
						<p class="authors-ranking-name">{{ auteur.firstname }}
							{{ auteur.lastname }}</p>
						<p class="authors-ranking-question">{{ auteur.Question|length }}
							questions</p>
					</div>
				</div>
			{% endfor %}
		</div>


		<h1 class="section-title">Dans la thématique “Sport”</h1>

		<div class="d-flex justify-content-between" style="margin:2% 0;">
			{% for question in sportQuestions %}
				<div class="questions">
					<div class="category-label">{{ question.category.name }}</div>
					<img class="questions-image" src="image/{{ question.image }}" alt="Image pour {{ question.title }}">
					<p class="questions-text">{{ question.title }}</p>
					<p class="text-custom">
						{{ question.Answer|length }}
						réponses - Par
						{{ question.user.firstName }}
						{{ question.user.lastName }}
						- 
																																																																																																																								                Il y a
						{{ (now.timestamp - question.publicationDate.timestamp) // 60 }}
						minutes
					</p>
				</div>
			{% endfor %}
		</div>


		<h1 class="section-title">Questions aléatoires</h1>

		<div class="row">
			{% if randomQuestions|length > 0 %}
				{% set firstQuestion = randomQuestions[0] %}
				<div class="col-lg-6 mb-4">
					<div class="p-3">
						<img class="img-fluid w-100 mb-3" src="image/{{ firstQuestion.image }}" alt="Image pour {{ firstQuestion.title }}">
						<p class="fs-3 fw-bold">{{ firstQuestion.title }}</p>
						<p class="text-custom">{{ firstQuestion.Answer|length }}
							réponses - Par
							{{ firstQuestion.user.firstName }}
							{{ firstQuestion.user.lastName }}
							- Il y a
							{{ (now.timestamp - firstQuestion.publicationDate.timestamp) // 60 }}
							minutes</p>
					</div>
				</div>

				<div class="col-lg-6 d-flex flex-wrap">
					{% for question in randomQuestions[1:5] %}
						<div class="col-6 p-2">
							<div class="p-3 h-100">
								<img class="img-fluid w-100 mb-2" src="image/{{ question.image }}" alt="Image pour {{ question.title }}">
								<p class="fs-5">{{ question.title }}</p>
								<p class="text-custom">{{ question.Answer|length }}
									réponses - Par
									{{ question.user.firstName }}
									{{ question.user.lastName }}
									- Il y a
									{{ (now.timestamp - question.publicationDate.timestamp) // 60 }}
									minutes</p>
							</div>
						</div>
					{% endfor %}
				</div>
			{% else %}
				<p>Aucune question disponible pour le moment.</p>
			{% endif %}
		</div>


	</div>


	<style>
		.section-title {
			margin-top: 3%;
			font-size: 300%;
			font-weight: 600
		}


		.img-responsive {
			width: 30vw;
			max-width: 100%;
			height: auto;
		}
		.text-custom {
			color: #AD0569;
		}


		.questions {
			position: relative;
		}
		.category-label {
			position: absolute;
			top: 10px;
			right: 10px;
			background-color: #AD0569;
			color: white;
			padding: 5px 10px;
			border-radius: 5px;
			font-size: 0.9rem;
			font-weight: bold;
			z-index: 1;
		}
		.questions-text {
			font-size: 125%;
			margin: 2% 0;
			width: 24vw;
			max-width: 100%;
		}

		.questions-image {
			width: 100%;
			height: auto;
			border-radius: 8px;
		}


		.authors-ranking {
			display: flex;
			align-items: center;
		}
		.authors-ranking-number {
			font-size: 500%;
			font-weight: 500;
			color: #AD0569;
			margin: 0;
		}
		.authors-ranking-name {
			font-size: 200%;
			font-weight: 600;
			margin: 0;
			text-wrap: nowrap;
		}
		.authors-ranking-question {
			font-size: 150%;
			margin: 0;
			text-wrap: nowrap;
		}

		.main-random-questions-questions {
			display: flex;
			flex-direction: column;
			margin: 0 2%;
		}
		.main-random-questions-questions-text {
			font-size: 150%;
			margin: 2% 0;
			width: 24vw;
			max-width: 100%;
		}
		.main-random-questions-image {
			width: 40vw;
			max-width: 100%;
			height: auto;
		}
	</style>
{% endblock %}
