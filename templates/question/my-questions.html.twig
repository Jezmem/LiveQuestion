{% extends 'base.html.twig' %}

{% block title %}Mes Questions{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Mes Questions</h1>

        <div class="questions-section">
            <ul class="list-group">
                {% for question in questions %}
                    <li class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                        <div class="question-details">
                            <p class="question-title h5 mb-3 mb-md-1">{{ question.title }}</p>
                            <img src="../uploads/images/{{ question.image }}" alt="{{ question.title }}" class="img-fluid rounded mb-3 mb-md-0" style="max-width: 200px;">
                            <span class="text-muted d-block">Publiée le {{ question.publicationDate|date('d/m/Y') }}</span>
                        </div>
                        <div class="question-actions mt-3 mt-md-0 d-flex flex-column flex-md-row gap-2">
                            <a href="{{ path('app_question_edit', {id: question.id}) }}" class="btn btn-warning btn-sm">Modifier</a>

                            <form method="post" action="{{ path('app_question_delete', {id: question.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette question ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <style>
        .question-title {
            color: #333;
            margin-bottom: 10px;
        }

        .question-actions .btn {
            margin-bottom: 5px;
        }

        @media (max-width: 768px) {
            .question-title {
                font-size: 1.2rem;
            }
        }
    </style>
{% endblock %}
