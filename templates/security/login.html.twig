{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="login-container">
        <form method="post" class="mt-5 p-4 border rounded bg-light shadow">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal text-center" style="color: #AD0569">Connexion</h1>

            <div class="form-group">
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group form-check mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                <label for="_remember_me" class="form-check-label">Se souvenir de moi</label>
            </div>

            <button class="btn-login btn btn-lg btn-primary" type="submit" stule="background-color: #AD0569; border-color: #AD0569;">
                Se connecter
            </button>
        </form>

        <a href="{{ path('app_register') }}">Pas de compte ? Inscrivez-vous</a>
        </div>

    <style>
        .btn-login:hover {
            background-color: #8c0452; 
            border-color: #8c0452;
        }
    </style>

{% endblock %}

