{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="account-container">
        <h1 class="account-title">Mon compte</h1>

        <div class="account-section">
            <h2 class="section-title">Mes informations</h2>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.firstName) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.lastName) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn" style="background-color: #AD0569; border-color: #AD0569; color: white">Mettre Ã  jour</button>
                    <a href="{{ path('app_my_questions') }}" class="btn btn-primary">Voir mes questions</a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .account-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }

        .account-title {
            text-align: center;
            margin-bottom: 30px;
            color: #AD0569;
        }

        .section-title {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .questions-list {
            list-style: none;
            padding: 0;
        }

        .question-item {
            padding: 10px 0;
            border-bottom: 1px solid #eaeaea;
        }

        .question-item a {
            font-weight: bold;
            color: #333;
        }

        .text-muted {
            color: #757575;
            font-size: 0.9em;
        }

        @media (max-width: 768px) {
            .account-container {
                padding: 10px;
            }

            .account-title {
                font-size: 1.8em;
            }

            .section-title {
                font-size: 1.3em;
            }

            .form-group {
                margin-bottom: 10px;
            }

            .question-item {
                font-size: 0.95em;
            }
        }

        @media (max-width: 576px) {
            .account-container {
                padding: 5px;
            }

            .account-title {
                font-size: 1.5em;
            }

            .section-title {
                font-size: 1.2em;
            }

            .btn-primary {
                width: 100%;
                font-size: 1.1em;
            }

            .question-item {
                font-size: 0.9em;
                padding: 8px 0;
            }
        }
    </style>
{% endblock %}
